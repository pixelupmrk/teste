<body>
  <div class="wrap">
    <div class="card">
      <h1>üöÄ PixelUp ‚Äî Starter ZERO</h1>
      <p class="muted">Deploy est√° ok. Este starter salva um √∫nico campo no <b>localStorage</b> para validar persist√™ncia.</p>

      <div id="lsWarn" class="warn">‚ö†Ô∏è Seu navegador bloqueou o localStorage (modo an√¥nimo/privacidade). Os dados n√£o ser√£o salvos.</div>

      <div class="row">
        <input id="nome" placeholder="Digite seu nome" />
        <button id="salvar">Salvar</button>
      </div>

      <table>
        <thead><tr><th>Nome salvo</th><th>A√ß√£o</th></tr></thead>
        <tbody id="lista"></tbody>
      </table>
    </div>
  </div>

  <script>
    (function(){
      // teste localStorage seguro
      let lsOk = true;
      try { localStorage.setItem("__t__", "1"); localStorage.removeItem("__t__"); }
      catch(e){ lsOk = false; document.getElementById('lsWarn').style.display='block'; }

      const KEY = "pixelup_zero_list";
      const $ = (s)=>document.querySelector(s);
      const lista = $("#lista");
      const salvarBtn = $("#salvar");

      let data = [];
      if(lsOk){
        try { data = JSON.parse(localStorage.getItem(KEY)) || []; } catch(e){ data = []; }
      }

      function render(){
        lista.innerHTML = "";
        data.forEach((n, i)=>{
          const tr = document.createElement("tr");
          tr.innerHTML = "<td>"+escapeHtml(n)+"</td><td><button data-i='"+i+"'>Remover</button></td>";
          lista.appendChild(tr);
        });
        lista.querySelectorAll("button[data-i]").forEach(b=>{
          b.onclick = () => { data.splice(parseInt(b.dataset.i,10),1); save(); render(); };
        });
      }
      function save(){
        if(!lsOk) return;
        try { localStorage.setItem(KEY, JSON.stringify(data)); } catch(e){}
      }
      salvarBtn.onclick = ()=>{
        const nome = ($("#nome").value||"").trim();
        if(!nome){ alert("Digite um nome"); return; }
        data.push(nome); $("#nome").value=""; save(); render();
      };
      function escapeHtml(s){ return String(s).replace(/[&<>"']/g,(m)=>({"&":"&amp;","<":"&lt;",">":"&gt;",""":"&quot;","'":"&#39;"}[m])); }
      render();
    })();
  </script>
